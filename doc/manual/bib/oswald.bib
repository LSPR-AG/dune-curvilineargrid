@Article{fallahi+2011a,
  Title                    = {On the computation of electromagnetic dyadic Green's Functions in Spherically Multilayered Media},
  Author                   = {Fallahi, A. and Oswald, B.},
  Journal                  = {IEEE Transactions on Microwave Theory and Techniques},
  Year                     = {2011},

  Month                    = {June},
  Number                   = {6},
  Pages                    = {1433-1440},
  Volume                   = {59},

  Abstract                 = {The dyadic Green's function method is an attractive approach for the calculation of electromagnetic scattering
in spherically symmetric layered geometry. We investigate a recent formulation and reveal a problem that is
associated with the non- converging series that are employed for the calculation of the dyadic Green's function
in unbounded media. To overcome this deficiency we introduce a new formulation that gives the desired solution
analytically. The new technique combines operations on scalar Green's function with a rotation of the coordinate
system. Our formulation also accelerates the algorithm to evaluate the dyadic Green's function in spherically
multi-layered media. We present examples where we compare the conventional formulation with our new one.
},
